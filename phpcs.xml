<?xml version="1.0"?>
<ruleset name="Project Rules">
    <!-- Path to the project files you want to check -->
    <file>./</file>

    <!-- Exclude some directories -->
    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>runtime/</exclude-pattern>

    <!-- Define the coding standard to use -->
    <arg name="standard" value="PSR12"/>
</ruleset>